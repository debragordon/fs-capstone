<!DOCTYPE html>
<html>
<head>
    <base href="/">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link src="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"/>

</head>
<body ng-app="DuckDuckApp">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" ng-controller="NavController">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/home">DuckDuck <img src="~/Images/DuckDuck-logo-head-bw.png" class="duckSmall"/></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li ng-show="!checkAuth()"><a href="/login">Login</a></li>
                    <li ng-show="!checkAuth()"><a href="/register">Register</a></li>
                    <li ng-show="checkAuth()"><a href="/classrooms">Classrooms</a></li>
                    <li ng-show="checkAuth()"><a href="/students">Enrolled Students</a></li>
                    <li ng-show="checkAuth()"><a href="/waitinglists">Waiting List</a></li>
                    <li ng-show="checkAuth()"><a ng-click="logout()">Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-right">
            <p class="text-right">&copy; @DateTime.Now.Year - DuckDuck Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @RenderSection("scripts", required: false)
</body>
</html>
