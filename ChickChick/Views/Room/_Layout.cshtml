<!DOCTYPE html>
<html>
<head>
    <base href="/">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body ng-app="DuckDuckApp">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" ng-controller="NavController">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("DuckDuck", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li ng-show="!checkAuth()"><a href="/login">login</a></li>
                    <li ng-show="!checkAuth()"><a href="/register">register</a></li>
                    <li ng-show="checkAuth()"><a href="/classrooms">classrooms</a></li>
                    <li ng-show="checkAuth()"><a href="/students">students</a></li>
                    <li ng-show="checkAuth()"><a href="/waitinglists">waiting lists</a></li>
                    <li ng-show="checkAuth()"><a ng-click="logout()">logout</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DuckDuck Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @RenderSection("scripts", required: false)
</body>
</html>
